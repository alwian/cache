{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
